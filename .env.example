# Pytheus Watchdog Configuration
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME=Pytheus Watchdog
APP_ENV=production
DEBUG=false
LOG_LEVEL=INFO

# Database
DATABASE_URL=sqlite:///./data/watchdog.db

# Security
# Generate a secure secret key: openssl rand -hex 32
SECRET_KEY=your-secret-key-here
API_TOKEN_SECRET=your-api-token-secret-here

# Admin Authentication (basic auth for Phase 1)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me-to-secure-password

# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#monitoring

# Telegram Notifications
# To get bot token: Message @BotFather on Telegram and create a new bot
# To get chat ID: Message your bot, then visit https://api.telegram.org/bot<TOKEN>/getUpdates
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Email Notifications (Optional - Phase 4)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL=alerts@pytheus.com

# Twilio SMS (Optional - Phase 4)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890
TWILIO_TO_NUMBER=+1234567890

# AI Triage (Phase 3)
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key
AI_TRIAGE_ENABLED=false

# Container Settings
TZ=UTC
